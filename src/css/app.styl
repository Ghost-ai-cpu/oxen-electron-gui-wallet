        -webkit-transition: background-color 0.2s ease-in;
        transition: background-color 0.2s ease-in;

        font-size: 16px;
        color: $oxen-navy;
        padding-top: 6px;
        padding-bottom: 6px;

        margin: 0 16px;
        border-radius: 3px;

        + .oxen-list-item {
            margin-top: 10px;
        }
    }

